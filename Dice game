			function myReset() {
			score = 0;
			document.getElementById("score").innerHTML=0;
			}
			function displayResult() {
			document.getElementById("dice").innerHTML = "Have a nice day!";
			}
			function rollDice() {
			var x = Math.floor((Math.random() * 6) + 1);
			console.log("chase1")
		switch (x) 
		{
			
			case 1:
			document.getElementById("dice1").style.visibility="visible";
			document.getElementById("dice2").style.visibility="hidden";
			document.getElementById("dice3").style.visibility="hidden";
			document.getElementById("dice4").style.visibility="hidden";
			document.getElementById("dice5").style.visibility="hidden";
			document.getElementById("dice6").style.visibility="hidden";
			
			break;
			
			case 2:
			
			document.getElementById("dice1").style.visibility="hidden";
			document.getElementById("dice2").style.visibility="visible";
			document.getElementById("dice3").style.visibility="hidden";
			document.getElementById("dice4").style.visibility="hidden";
			document.getElementById("dice5").style.visibility="hidden";
			document.getElementById("dice6").style.visibility="hidden";
			break;
			
			case 3:
			document.getElementById("dice1").style.visibility="hidden";
			document.getElementById("dice2").style.visibility="hidden";
			document.getElementById("dice3").style.visibility="visible";
			document.getElementById("dice4").style.visibility="hidden";
			document.getElementById("dice5").style.visibility="hidden";
			document.getElementById("dice6").style.visibility="hidden";
			break;
			
			case 4:
			document.getElementById("dice1").style.visibility="hidden";
			document.getElementById("dice2").style.visibility="hidden";
			document.getElementById("dice3").style.visibility="hidden";
			document.getElementById("dice4").style.visibility="visible";
			document.getElementById("dice5").style.visibility="hidden";
			document.getElementById("dice6").style.visibility="hidden";
			break;
			
			case 5:
			document.getElementById("dice1").style.visibility="hidden";
			document.getElementById("dice2").style.visibility="hidden";
			document.getElementById("dice3").style.visibility="hidden";
			document.getElementById("dice4").style.visibility="hidden";
			document.getElementById("dice5").style.visibility="visible";
			document.getElementById("dice6").style.visibility="hidden";
			break;
			
			case 6:
			document.getElementById("dice1").style.visibility="hidden";
			document.getElementById("dice2").style.visibility="hidden";
			document.getElementById("dice3").style.visibility="hidden";
			document.getElementById("dice4").style.visibility="hidden";
			document.getElementById("dice5").style.visibility="hidden";
			document.getElementById("dice6").style.visibility="visible";
			break;
			
		}
		}
		function scoreCal()
		{
			if (document.getElementById("dice1").style.visibility=="visible")
				score+= 1;
			if (document.getElementById("dice2").style.visibility=="visible")
				score+= 2;
			if (document.getElementById("dice3").style.visibility=="visible")
				score+= 3;
			if (document.getElementById("dice4").style.visibility=="visible")
				score+= 4;
			if (document.getElementById("dice5").style.visibility=="visible")
				score+= 5;
			if (document.getElementById("dice6").style.visibility=="visible")
				score+= 6;
			document.getElementById(id ="score").innerHTML= score; console.log("chasefgrtfhrhey")
		}	
			
